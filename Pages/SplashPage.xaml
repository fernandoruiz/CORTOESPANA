<?xml version="1.0" encoding="UTF-8"?>
<local:SplashPageXaml 
	xmlns="http://xamarin.com/schemas/2014/forms" 
	xmlns:local="clr-namespace:cortoespana;assembly=cortoespana"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
	x:Class="cortoespana.SplashPage">
	<StackLayout Padding="20,20,20,20" Spacing="30" VerticalOptions ="Center">
		<Image Source="logoCortoespana.png" />
		<ActivityIndicator IsRunning="{Binding IsBusy}" IsVisible="{Binding IsBusy}" />
	</StackLayout>
</local:SplashPageXaml>
